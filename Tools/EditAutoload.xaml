<hc:Window  xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="LBC.Tools.EditAutoload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LBC.Tools"
        mc:Ignorable="d"
        Title="EditAutoload" Height="205" Width="300" WindowStartupLocation = "CenterScreen" ResizeMode="NoResize" >
    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Width="285" x:Name="idTextBox"  hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="ID:" Style="{StaticResource TextBoxExtend.Small}" Margin="5"/>
        <TextBox Grid.Row="1" Width="285" x:Name="nameTextBox"  hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Name:" Style="{StaticResource TextBoxExtend.Small}" Margin="5,0,5,0"/>
        <TextBox Grid.Row="2" Width="285" x:Name="item1TextBox"  hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Item1:" Style="{StaticResource TextBoxExtend.Small}" Margin="5"/>
        <TextBox Grid.Row="3" Width="285" x:Name="item2TextBox"  hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Item2:" Style="{StaticResource TextBoxExtend.Small}" Margin="5"/>
        <TextBox Grid.Row="4" Width="285" x:Name="item3TextBox"  hc:InfoElement.TitleWidth="50" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="Item3:" Style="{StaticResource TextBoxExtend.Small}" Margin="5"/>

        <Button Content="保存" Style="{DynamicResource ButtonSuccess.Small}" Grid.Row="5" Click="SaveButton_Click"/>
    </Grid>
</hc:Window>
