<Application x:Class="LBC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:LBC.Converters" xmlns:local="clr-namespace:LBC.Views"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="CountryImage" UriSource="/FilterTreeViewLib;component/Resources/Locations/文件夹.png" />
            <BitmapImage x:Key="RegionImage"  UriSource="/FilterTreeViewLib;component/Resources/Locations/appbar.base.select.png" />
            <BitmapImage x:Key="CityImage"    UriSource="/FilterTreeViewLib;component/Resources/Locations/文件.png" />
            <BitmapImage x:Key="Project"    UriSource="/FilterTreeViewLib;component/Resources/Locations/项目.png" />
            <BitmapImage x:Key="SaveOk"    UriSource="/FilterTreeViewLib;component/Resources/Locations/saveok.png" />
            <BitmapImage x:Key="Savefail"    UriSource="/FilterTreeViewLib;component/Resources/Locations/savefail.png" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MLib;component/Themes/DarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LBC;component/Themes/DarkBrushsExtended.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <ResourceDictionary Source="Resources/Themes/Theme.xaml"/>
                <ResourceDictionary Source="Resources/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LBC;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LBC;component/Themes/Controls/VsResizeGrip.xaml" />
                <ResourceDictionary Source="pack://application:,,,/UnitComboLib;component/Themes/DarkBrushs.xaml" />
                <ResourceDictionary Source="pack://application:,,,/TextEditLib;component/Themes/DarkBrushs.xaml" />
                <ResourceDictionary Source="pack://application:,,,/TextEditLib;component/Themes/DarkIcons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/ICSharpCode.AvalonEdit;component/themes/DarkTheme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LBC;component/Themes/AppFonts.xaml"/>


                <ResourceDictionary>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    <BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                    <converters:ActiveDocumentConverter x:Key="ActiveDocumentConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
